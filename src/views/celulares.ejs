<!DOCTYPE html>
<html lang="en">
<%- include('partial/head',{ title : 'CELULARES' }) %>

  <body class="celular">
    <%- include('partial/header') %>

      <div class="container">
        <div class="row">
          <%celulares.forEach(product=> { %>
            <div class="col-lg-4 col-md-4 mb-4 card-hover-zoom">
              <div class="card h-100" style="max-width: 12rem; margin: auto;">
                <img src="/images/products/<%=product.image ||'default.png' %>" class="card-img-top" alt="Imagen producto">
                <div class="card-body">
                  <h6 style="color: black">
                    <%= product.brand.name %>
                  </h6>
                  <p class="card-title"><b>
                      <%=product.model%>
                    </b></p>
                  <% if(product.discount> 0) { %>
                    <small class="card-text" style="text-decoration: line-through;">$<%=product.price%></small>
                    <p class="card-text text-success"><b>
                        <%=product.discount%>%
                      </b></p>
                    <% } %>
                </div>
                <div class="card-footer">
                  <p class="card-text">$<%=product.price * (1 - product.discount/100)%>
                  </p>
                  </p>
                  <a href="/products/detalle/<%=product.id%>" class="btn btn-primary">Ver mÃ¡s</a>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>

      <%- include('partial/footer') %>
  </body>

</html>